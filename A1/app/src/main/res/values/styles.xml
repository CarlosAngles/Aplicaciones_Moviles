<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Define tu tema de aplicación si aún no existe -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Personaliza el tema de la aplicación aquí -->
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryDark">@color/dark_gray</item>
        <item name="colorAccent">@color/dark_gray</item>
    </style>

    <!-- Define tu ButtonStyle -->
    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_margin">1dp</item> <!-- Margen incluido -->



    </style>
</resources>
