<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/tvOperation"
            android:layout_width="568dp"
            android:layout_height="70dp"
            android:layout_below="@id/tvResult"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text=""
            android:textSize="24sp"
            android:inputType="text" /> <!-- Esto permite la entrada de texto -->

        <!-- TextView to display the result -->

        <!-- GridLayout for the buttons -->
        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#EFEFEF"
            android:gravity="end"
            android:padding="16dp"
            android:text="0"
            android:textSize="40sp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:columnCount="4"
            android:rowCount="5"
            android:background="#EFEFEF">

            <!-- Number and Operation Buttons -->
            <Button
                android:id="@+id/btn7"
                style="@style/ButtonStyle"
                android:text="7" />

            <Button
                android:id="@+id/btn8"
                style="@style/ButtonStyle"
                android:text="8" />

            <Button
                android:id="@+id/btn9"
                style="@style/ButtonStyle"
                android:text="9" />

            <Button
                android:id="@+id/btnDivide"
                style="@style/ButtonStyle"
                android:text="÷" />

            <Button
                android:id="@+id/btn4"
                style="@style/ButtonStyle"
                android:text="4" />

            <Button
                android:id="@+id/btn5"
                style="@style/ButtonStyle"
                android:text="5" />

            <Button
                android:id="@+id/btn6"
                style="@style/ButtonStyle"
                android:text="6" />

            <Button
                android:id="@+id/btnMultiply"
                style="@style/ButtonStyle"
                android:text="×" />

            <Button
                android:id="@+id/btn1"
                style="@style/ButtonStyle"
                android:text="1" />

            <Button
                android:id="@+id/btn2"
                style="@style/ButtonStyle"
                android:text="2" />

            <Button
                android:id="@+id/btn3"
                style="@style/ButtonStyle"
                android:text="3" />

            <Button
                android:id="@+id/btnSubtract"
                style="@style/ButtonStyle"
                android:text="−" />

            <Button
                android:id="@+id/btn0"
                style="@style/ButtonStyle"
                android:text="0" />

            <Button
                android:id="@+id/btnDecimal"
                style="@style/ButtonStyle"
                android:text="." />

            <Button
                android:id="@+id/btnPower"
                style="@style/ButtonStyle"
                android:text="^" />

            <Button
                android:id="@+id/btnAdd"
                style="@style/ButtonStyle"
                android:text="+" />
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#EFEFEF"
            android:columnCount="5"
            android:rowCount="1">

            <Button

                android:id="@+id/btnx"
                style="@style/ButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="X" />

            <Button
                android:id="@+id/btnEquals"
                style="@style/ButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="=" />

            <Button
                android:id="@+id/btnRaiz"
                style="@style/ButtonStyle"
                android:layout_width="74dp"
                android:layout_height="match_parent"
                android:text="√" />

            <Button
                android:id="@+id/btnOpenParen"
                style="@style/ButtonStyle"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:text="(" />

            <Button
                android:id="@+id/btnCloseParen"
                style="@style/ButtonStyle"
                android:layout_width="51dp"
                android:layout_height="match_parent"
                android:text=")" />
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#EFEFEF"
            android:columnCount="2"
            android:rowCount="1">

            <Button
                android:id="@+id/btnClear"
                style="@style/ButtonStyle"
                android:layout_width="146dp"
                android:layout_height="match_parent"
                android:text="C" />

            <Button
                android:id="@+id/btnGraficar"
                style="@style/ButtonStyle"
                android:layout_width="218dp"
                android:layout_height="match_parent"
                android:text="Graficar" />
        </GridLayout>



    </LinearLayout>
</ScrollView>
